{
  "name": "homebridge-zigbee-nt",
  "version": "1.0.7",
  "description": "ZigBee New Technology Platform plugin for HomeBridge",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clean && yarn build-ts",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"src/*.{js,ts}\" --quiet --fix",
    "prettier": "prettier --single-quote --trailing-comma es5 --write \"{src,__{tests,mocks}__}/**/*.ts\"",
    "permit-join": "node scripts/permit-join.js",
    "clean": "rimraf dist/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "homebridge": ">=1.1.0",
    "node": ">=12.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madchicken/homebridge-zigbee-nt.git"
  },
  "keywords": [
    "homebridge-plugin",
    "homebridge-zigbee",
    "homebridge",
    "homekit",
    "zigbee",
    "ikea",
    "tradfri",
    "xiaomi",
    "aqara",
    "philips",
    "hue"
  ],
  "author": {
    "name": "Pierpaolo Follia",
    "email": "pfollia@gmail.com",
    "url": "https://github.com/madchicken/homebridge-zigbee-nt.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/madchicken/homebridge-zigbee-nt.git#README.md",
  "dependencies": {
    "async-retry": "1.3.1",
    "js-big-decimal": "1.2.4",
    "lodash": "4.17.20",
    "serialport": "9.0.2",
    "typescript": "3.9.7",
    "zigbee-herdsman": "0.13.30",
    "zigbee-herdsman-converters": "12.0.235",
    "express": "4.17.1",
    "body-parser": "1.19.0"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.2",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.149",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^11.15.3",
    "@types/serialport": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "homebridge": "^1.1.1",
    "husky": "^4.2.3",
    "jest": "^25.5.4",
    "nock": "^12.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1"
  },
  "files": [
    "dist",
    "config.schema.json",
    "package.json"
  ]
}
