{
  "name": "homebridge-zigbee-nt",
  "version": "1.0.0-rc.1",
  "description": "ZigBee New Technology Platform plugin for HomeBridge",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clean && yarn build-ts",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"lib/*.{js,ts}\" --quiet --fix",
    "prettier": "prettier --single-quote --trailing-comma es5 --write \"{lib,__{tests,mocks}__}/**/*.ts\"",
    "permit-join": "node scripts/permit-join.js",
    "clean": "rimraf dist/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "homebridge": ">=1.0.0",
    "node": ">=12.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madchicken/homebridge-zigbee-nt.git"
  },
  "keywords": [
    "homebridge-plugin",
    "homebridge-zigbee",
    "homebridge",
    "homekit",
    "zigbee",
    "ikea",
    "tradfri",
    "xiaomi",
    "aqara",
    "philips",
    "hue"
  ],
  "author": {
    "name": "Pierpaolo Folloa",
    "email": "pfollia@gmail.com",
    "url": "https://github.com/madchicken/homebridge-zigbee-nt.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/madchicken/homebridge-zigbee-nt.git#README.md",
  "dependencies": {
    "js-big-decimal": "^1.2.2",
    "async-retry": "^1.3.1",
    "lodash": "^4.17.15",
    "require-dir": "^1.2.0",
    "serialport": "^8.0.8",
    "zcl-id": "^0.5.0",
    "zigbee-herdsman": "^0.12.95",
    "zigbee-herdsman-converters": "^12.0.120",
    "typescript": "^3.7.4",
    "yargs": "^15.3.1",
    "chalk": "^4.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/node": "^11.15.3",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "@types/serialport": "^8.0.1",
    "@types/async-retry": "^1.4.2",
    "@types/nanoid": "^2.1.0",
    "@types/jest": "^26.0.0",
    "hap-nodejs": "^0.7.3",
    "homebridge": "^1.1.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "ts-jest": "^25.2.1",
    "nock": "^12.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2"
  },
  "files": [
    "dist",
    "config.schema.json",
    "package.json"
  ]
}
