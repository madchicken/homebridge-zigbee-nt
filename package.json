    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "faker": "^5.4.0",
    "homebridge": "^1.3.1",
    "http-proxy-middleware": "^1.0.6",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "nock": "^12.0.2",
    "node-forge": "^0.10.0",
    "parcel-bundler": "^1.12.5",
